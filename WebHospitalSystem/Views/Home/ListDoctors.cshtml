@model IEnumerable<WebHospitalSystem.Models.DoctorVM>

@{
    ViewBag.Title = "Список врачей";
}
<br />
<h2>Список врачей больницы</h2>
@if (Session["Role"] != null && Session["Role"].ToString() == "Doctor")
{
    <p>
        @Html.ActionLink("Добавить нового врача", "RegisterDoctor", "Account")
    </p>
}
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DoctorId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            @if (Session["Role"] != null && Session["Role"].ToString() == "Doctor")
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.DoctorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                @if (Session["Role"] != null && Session["Role"].ToString() == "Doctor")
                {
                    <td>
                        @Html.ActionLink("Редактировать", "EditDoctor", new { id = item.DoctorId })
                        @Html.ActionLink("Удалить", "DeleteDoctor", new { id = item.DoctorId })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

