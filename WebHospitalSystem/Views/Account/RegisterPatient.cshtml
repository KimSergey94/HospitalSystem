@model WebHospitalSystem.Models.RegisterPatientVM

@{
    ViewBag.Title = "Регистрация пациента";
}

<h2>Регистрация пациента</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <p>
        @Html.LabelFor(model => model.FirstName)<br />
        @Html.EditorFor(model => model.FirstName)
        @Html.ValidationMessageFor(model => model.FirstName)
    </p>

    <p>
        @Html.LabelFor(model => model.LastName)<br />
        @Html.EditorFor(model => model.LastName)
        @Html.ValidationMessageFor(model => model.LastName)
    </p>

    <p>
        @Html.LabelFor(model => model.IIN)<br />
        @Html.EditorFor(model => model.IIN)
        @Html.ValidationMessageFor(model => model.IIN)
    </p>

    <p>
        @Html.LabelFor(model => model.PhoneNumber) <br />
        @Html.EditorFor(model => model.PhoneNumber)
        @Html.ValidationMessageFor(model => model.PhoneNumber)
    </p>

    <p>
        @Html.LabelFor(model => model.Address) <br />
        @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </p>

    <p>
        @Html.LabelFor(model => model.Login)<br />
        @Html.EditorFor(model => model.Login)
        @Html.ValidationMessageFor(model => model.Login)
    </p>

    <p>
        @Html.LabelFor(model => model.Password)<br />
        @Html.EditorFor(model => model.Password)
        @Html.ValidationMessageFor(model => model.Password)
    </p>

    <p>
        @Html.LabelFor(model => model.ConfirmPassword) <br />
        @Html.EditorFor(model => model.ConfirmPassword)
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
    </p>

    <p>
        <input type="submit" value="Зарегистрировать пациента" class="btn btn-default" />
    </p>
}