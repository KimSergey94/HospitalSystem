@model WebHospitalSystem.Models.UserVM
@{
    ViewBag.Title = "Вход в систему";
}

<br />
<h2 style="color:midnightblue; border-bottom-style:inset">Страница авторизации</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <p>
        @Html.LabelFor(model => model.Login) <br />
        @Html.EditorFor(model => model.Login)
        @Html.ValidationMessageFor(model => model.Login)
    </p>

    <p>
        @Html.LabelFor(model => model.Password) <br />

        @Html.EditorFor(model => model.Password)
        @Html.ValidationMessageFor(model => model.Password)
    </p>

    <p>
        <input type="submit" value="Войти в систему" class="btn btn-dark" />
    </p>
}